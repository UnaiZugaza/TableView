<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.unaizugaza.controladores.MostrarTabla">

    <children>
        <!-- Formulario arriba -->
        <GridPane prefHeight="150.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" percentWidth="50.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" />
            </columnConstraints>

            <rowConstraints>
                <RowConstraints percentHeight="33.0" vgrow="SOMETIMES" />
                <RowConstraints percentHeight="33.0" vgrow="SOMETIMES" />
                <RowConstraints percentHeight="33.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <children>
                <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets left="20.0" />
                    </GridPane.margin>
                </Label>

                <TextArea fx:id="txtFirstName" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
                    <GridPane.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </GridPane.margin>
                </TextArea>

                <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="20.0" />
                    </GridPane.margin>
                </Label>

                <TextArea fx:id="txtLastName" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
                    <GridPane.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </GridPane.margin>
                </TextArea>

                <Label text="Birth Date:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="20.0" />
                    </GridPane.margin>
                </Label>

                <DatePicker fx:id="dateBirth" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
                    <GridPane.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </GridPane.margin>
                </DatePicker>

                <Button fx:id="btAdd" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onAction="#anyadirPersona" text="Add" GridPane.columnIndex="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.rowSpan="3" GridPane.vgrow="ALWAYS">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </GridPane.margin>
                </Button>
            </children>
        </GridPane>

        <!-- Botones intermedios -->
        <HBox layoutX="14.0" layoutY="176.0" spacing="10.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="6.0" AnchorPane.topAnchor="176.0">
            <children>
                <Button fx:id="btRestoreRows" maxWidth="1.7976931348623157E308" onAction="#restaurar" text="Restore Rows" HBox.hgrow="ALWAYS" />
                <Button fx:id="btDeleteRow" maxWidth="1.7976931348623157E308" onAction="#borrarFilas" text="Delete Selected Rows" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>

        <!-- Tabla -->
        <TableView fx:id="tableMain" layoutY="223.0" prefHeight="277.0" prefWidth="380.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="223.0">

            <columns>
                <TableColumn fx:id="tableId" prefWidth="50.0" text="Id" />
                <TableColumn fx:id="tableFirstName" prefWidth="125.0" text="First Name" />
                <TableColumn fx:id="tableLastName" prefWidth="125.0" text="Last Name" />
                <TableColumn fx:id="tableBirthDate" prefWidth="200.0" text="Birth Date" />
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

    </children>
</AnchorPane>
